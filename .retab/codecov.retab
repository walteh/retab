TOOLS_DIR = "tools"

GO_PACKAGE = "github.com/walteh/retab"

gen codecov {
	schema = "https://json.schemastore.org/codecov"
	path   = "../.codecov.yml"
	data = {
		codecov = {
			require_ci_to_pass = true
		}
		github_checks = {
			annotations = true
		}
		parsers = {
			go = {
				partials_as_hits = true
			}
		}
		coverage = {
			range     = "60..80"
			round     = "down"
			precision = 2
		}

	}
}

