root = true

[*]
indent_style = tab
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = true

[*.txt]
trim_trailing_whitespace = true
insert_final_newline = false

[*.{yml,yaml}]
indent_style = space
indent_size = 4


[*.{hcl,tf}]
indent_style = tab
indent_size = 4



[*.py]
indent_style = space
# indent_size = 4
